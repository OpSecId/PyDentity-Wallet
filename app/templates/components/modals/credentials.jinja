{% for credential in session['credentials'] %}
<div class="modal modal-blur fade" id="modal-credential-{{ loop.index }}" tabindex="-1" style="display: none;"
    aria-hidden="true">
    <div class="modal-dialog modal-fullscreen modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Credential Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                        <span class="avatar avatar-xl"
                            style="background-image: url({{ credential['issuer']['image'] }})"></span>
                    </div>
                    <div class="col">
                        <h5 class="m-0">{{ credential.get('name') or 'No credential name' }}</h5>
                        <div class="text-secondary">{{ credential['issuer'].get('name') or 'No issuer name' }}</div>
                        <div class="small mt-1">
                            {% if credential.get('validFrom') %} {{ credential['validFrom'].split('T')[0] }}
                            {% elif credential.get('issuanceDate') %} {{ credential['issuanceDate'].split('T')[0] }}
                            {% else %} No Issuance {% endif %}
                            -
                            {% if credential.get('validUntil') %} {{ credential['validUntil'].split('T')[0] }}
                            {% elif credential.get('expirationDate') %} {{ credential['expirationDate'].split('T')[0] }}
                            {% else %} No Expiration {% endif %}
                        </div>
                    </div>
                    <div class="col-auto">
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <div class="accordion" id="accordion-credential-{{ loop.index }}">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading-1">
                                <a href="#" class="accordion-button collapsed" data-bs-toggle="collapse"
                                    data-bs-target="#collapse-credential-{{ loop.index }}" aria-expanded="false">
                                    Expand Content
                                </a>
                            </h2>
                            <div id="collapse-credential-{{ loop.index }}" class="accordion-collapse collapse"
                                data-bs-parent="#accordion-credential-{{ loop.index }}" style="">
                                <pre
                                    style="overflow: scroll; width: 100%; height: 250px;"><code>{{ credential|tojson(2) }}</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link link-secondary w-100" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}